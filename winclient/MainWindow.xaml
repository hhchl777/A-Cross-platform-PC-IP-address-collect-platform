<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="winclient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="连接配置">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <Grid Padding="20" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="IP服务器连接配置" 
                       FontSize="24" 
                       FontWeight="SemiBold"
                       Foreground="{ThemeResource SystemAccentColor}"/>
            <TextBlock Text="配置服务器连接参数"
                       FontSize="14"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 配置表单 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- 设备名称 -->
                <StackPanel>
                    <TextBlock Text="设备名称" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="DevicenameTextBox" 
                             PlaceholderText="输入设备名称"
                             Height="35"/>
                </StackPanel>

                <!-- 服务器地址 -->
                <StackPanel>
                    <TextBlock Text="服务器地址" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="ServerAddressTextBox" 
                             PlaceholderText="例如：192.168.1.100 或 example.com"
                             Height="35"/>
                </StackPanel>

                <!-- 用户名 -->
                <StackPanel>
                    <TextBlock Text="用户名" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                             PlaceholderText="输入用户名"
                             Height="35"/>
                </StackPanel>

                <!-- 密码 -->
                <StackPanel>
                    <TextBlock Text="密码" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 PlaceholderText="输入密码"
                                 Height="35"/>
                </StackPanel>

                <!-- 上报时间间隔 -->
                <StackPanel>
                    <TextBlock Text="上报时间间隔" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="ReportIntervalComboBox" 
                              Height="40"
                              PlaceholderText="选择上报间隔">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Display}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 状态显示 -->
            <TextBlock x:Name="StatusTextBlock" 
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       Text="就绪"/>

            <!-- 断开连接按钮 -->
            <Button x:Name="TestConnectionButton" 
                    Grid.Column="1"
                    Content="测试连接"
                    Height="40"
                    MinWidth="100"
                    Margin="0,0,10,0"
                    Click="TestConnectionButton_Click"/>

            <!-- 连接按钮 -->
            <Button x:Name="ConnectButton" 
                    Grid.Column="2"
                    Content="连接"
                    Height="40"
                    MinWidth="100"
                    Background="{ThemeResource SystemAccentColor}"
                    Foreground="White"
                    Click="ConnectButton_Click"/>
        </Grid>
    </Grid>
</Window>
